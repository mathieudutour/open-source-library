{
  "name": "open-source-library",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "nyc ava",
    "lint": "eslint",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commit": "git-cz",
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "babel src/ -o dist/",
    "docs:prepare": "gitbook install",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "docs:build": "npm run docs:prepare && rm -rf _book && gitbook build",
    "docs:publish": "npm run docs:build && cd _book && git init && git commit --allow-empty -m 'Update docs' && git checkout -b gh-pages && git add . && git commit -am 'Update docs' && git push git@github.com:mathieudutour/open-source-library gh-pages --force"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mathieudutour/open-source-library.git"
  },
  "files": ["dist"],
  "author": "Mathieu Dutour <mathieu@dutour.me> (http://mathieu.dutour.me/)",
  "license": "MIT",
  "devDependencies": {
    "ava": "0.5.0",
    "babel": "6.1.18",
    "commitizen": "2.4.6",
    "coveralls": "2.11.4",
    "cz-conventional-changelog": "1.1.4",
    "eslint": "1.9.0",
    "eslint-config-defaults": "7.1.1",
    "eslint-plugin-react": "3.9.0",
    "ghooks": "1.0.0",
    "gitbook-cli": "1.0.0",
    "gitbook-plugin-prism": "1.0.0",
    "nyc": "3.2.2",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "babel-preset-es2015": "6.1.18"
  }
}
